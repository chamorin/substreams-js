{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["web"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@fubhy/substreams": ["../../packages/substreams/src/index.js"],
      "@fubhy/substreams/proto/*": ["../../packages/substreams/src/proto/*"],
      "@fubhy/substreams-proxy": [
        "../../packages/substreams-proxy/src/index.js"
      ],
      "@fubhy/substreams-proxy/client": [
        "../../packages/substreams-proxy/src/client/index.js"
      ],
      "@fubhy/substreams-proxy/server": [
        "../../packages/substreams-proxy/src/server/index.js"
      ],
      "@fubhy/substreams-proxy/proto/*": [
        "../../packages/substreams-proxy/src/proto/*"
      ],
      "@fubhy/substreams-react": [
        "../../packages/substreams-react/src/index.js"
      ]
    }
  }
}
